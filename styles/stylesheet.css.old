body {
  font-family: sans-serif;
  font-size: 0.75em;
}

div#bar {
  width: 100%;
  border: solid black 1px;
  background-color: #be3426;
  text-align: center;
}

div#navigation {
  float: left;
  width: 10%;
  padding: 1%;
}

div#contents {
  float: right;
  width: 70%;
  padding: 1%;
  padding-right: 15%;
}

img#rulogo {
  margin: 2px;
}

img#email {
  height:1.2em;
}

h1 {
  font-family: sans-serif;
  font-size: 18px;
  text-align: center;
  margin-bottom: 2em;
  margin-top: 1em;
}

span#author {
  font-style: italic;
}

a:link {
  color: #be3426;
}

a:visited {
  color: #be3426;
}

ul.texts {
  list-style-type: none;
  list-style-position: outside;
}

.first {
 margin-top: 0px;
}

h3 {
  margin-bottom: 0.25em;
}

ul.pubs a:link {
  text-decoration: none;
}

img#photo {
  width: 20%;
  float: right;
  border: solid black 1px;
}

li {
  margin-bottom: 1em;
}

span.date {
  display: inline-block;
  width: 24em;
  font-weight: bold;
}

div#upnext {
  border: solid #be3426 0.2em;
  margin-left: -3em;
  padding-left: 2.8em;
  margin-top: -0.5em;
  padding-top: 0.3em;
  margin-bottom: -0.5em;
  padding-bottom: 0.3em;
}

div#mapbox {
  position: relative;
  width: 100%;
}

div#mapbox:before {
  content: "";
  display: block;
  padding-top: 60%;
}

div#mapdiv {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
